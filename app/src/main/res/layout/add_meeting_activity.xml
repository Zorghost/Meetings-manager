<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bk_color"
    android:focusableInTouchMode="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Cancel" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/theMeetingName1"
                        style="@style/parent"
                        android:layout_marginTop="20dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/add_meeting_name"
                            style="@style/modifiedEditText"
                            android:hint="Meeting Name"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/buttonnumber2and3"
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <Button
                            android:id="@+id/button3"
                            style="@style/modifiedEditText"
                            android:layout_width="180dp"
                            android:maxLines="1"
                            android:text="Date"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                        <Button
                            android:id="@+id/button2"
                            style="@style/modifiedEditText"
                            android:layout_width="150dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="-50dp"
                            android:maxLines="1"
                            android:text="Time"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/theMeetingPlace"
                        style="@style/parent"
                        android:layout_marginTop="20dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/add_meeting_place"
                            style="@style/modifiedEditText"
                            android:hint="Place"
                            android:inputType="text"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:id="@+id/addPersonButton"
                        style="@style/parent"
                        android:layout_marginTop="20dp">

                        <Button
                            android:id="@+id/button4"
                            style="@style/modifiedEditText"
                            android:hint="add persons"
                            android:maxLines="1"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Image"
                        style="@style/parent"
                        android:layout_marginTop="20dp">


                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addImageButton"
                        style="@style/parent"
                        android:layout_marginTop="20dp">

                        <Button
                            android:id="@+id/button5"
                            style="@style/modifiedEditText"
                            android:hint="add an Image"
                            android:maxLines="1"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/theMeetingDescription"
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/add_meeting_description"
                            style="@style/modifiedEditText"
                            android:hint="Description"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/done_button"
                        style="@style/loginButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/loginViewsMargin"
                        android:gravity="center"
                        android:text="Add Meeting"
                        app:initialCornerAngle="27dp"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


</ScrollView>